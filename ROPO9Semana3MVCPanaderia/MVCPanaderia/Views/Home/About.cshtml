<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
        var categoryLinks = document.querySelectorAll('.menu-categories a');
        var productCards = document.querySelectorAll('.product-card');

        for (var i = 0; i < categoryLinks.length; i++) {
            categoryLinks[i].addEventListener('click', function (e) {
                e.preventDefault();

                for (var j = 0; j < categoryLinks.length; j++) {
                    categoryLinks[j].classList.remove('active');
                }
                this.classList.add('active');

                var category = this.getAttribute('data-category');

                for (var k = 0; k < productCards.length; k++) {
                    var card = productCards[k];
                    if (category === 'all' || card.getAttribute('data-category') === category) {
                        card.style.display = 'flex';
                    } else {
                        card.style.display = 'none';
                    }
                }
            });
        }

        var orderButtons = document.querySelectorAll('.btn-order');
        for (var m = 0; m < orderButtons.length; m++) {
            orderButtons[m].addEventListener('click', function (e) {
                e.preventDefault();
                var productTitle = this.closest('.product-card').querySelector('.product-title').textContent;
                alert('¡Producto agregado al carrito!\n\n' + productTitle + '\n\nPronto podrás completar tu pedido.');
            });
        }
    });
</script>