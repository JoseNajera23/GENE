    }

    .menu-header {
        background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
        color: white;
        padding: 80px 0;
        text-align: center;
        margin-bottom: 50px;
        position: relative;
        overflow: hidden;
    }

        .menu-header::before {
            content: '🍞';
            position: absolute;
            font-size: 20em;
            opacity: 0.08;
            top: -80px;
            left: -50px;
            transform: rotate(-20deg);
        }

        .menu-header::after {
            content: '🥖';
            position: absolute;
            font-size: 15em;
            opacity: 0.08;
            bottom: -60px;
            right: -40px;
            transform: rotate(15deg);
        }

        .menu-header h1 {
            font-family: 'Damion', cursive;
            font-size: 4em;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }

        .menu-header p {
            font-size: 1.2em;
            color: #f5f5dc;
            max-width: 800px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

    .menu-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .menu-intro {
        background: white;
        border-radius: 20px;
        padding: 50px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        margin-bottom: 50px;
        display: flex;
        align-items: center;
        gap: 40px;
    }

    .menu-intro-text {
        flex: 1;
    }

        .menu-intro-text h2 {
            color: #D2691E;
            font-family: 'Damion', cursive;
            font-size: 3em;
            margin-bottom: 15px;
        }

        .menu-intro-text h3 {
            color: #8B4513;
            font-size: 1.8em;
            margin-bottom: 20px;
        }

        .menu-intro-text p {
