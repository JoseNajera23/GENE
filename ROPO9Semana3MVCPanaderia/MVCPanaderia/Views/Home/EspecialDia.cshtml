    }

    .menu-board-img {
        width: 100%;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .menu-lists {
        flex: 1;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 40px;
    }

    .menu-list-section h3 {
        color: #8B4513;
        font-size: 1.8em;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 3px solid #D2691E;
        font-weight: bold;
    }

    .menu-list-section ol {
        list-style: none;
        padding: 0;
        counter-reset: item;
    }

    .menu-list-section li {
        counter-increment: item;
        padding: 12px 0 12px 45px;
        position: relative;
        color: #666;
        font-size: 1.05em;
        border-bottom: 1px solid #eee;
        transition: all 0.3s ease;
    }

        .menu-list-section li:hover {
            color: #D2691E;
            padding-left: 50px;
        }

        .menu-list-section li::before {
            content: counter(item);
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            background: linear-gradient(135deg, #D2691E 0%, #8B4513 100%);
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 0.9em;
        }

    .promo-banner {
        background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
        color: #8B4513;
        padding: 30px;
        border-radius: 20px;
        text-align: center;
        margin-bottom: 50px;
        box-shadow: 0 10px 30px rgba(255, 165, 0, 0.3);
    }

        .promo-banner h3 {
            font-family: 'Damion', cursive;
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .promo-banner p {
            font-size: 1.2em;
            font-weight: bold;
        }

    @@media (max-width: 992px) {
        .menu-diario-content {
            flex-direction: column;
        }

        .menu-board-container {
            flex: 1;
            width: 100%;
        }

        .menu-lists {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .special-header h1 {
            font-size: 2.8em;
        }

        .popular-grid {
            grid-template-columns: 1fr;
        }

        .popular-section,
        .menu-diario-section {
            padding: 30px 20px;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .popular-card {
        animation: fadeInUp 0.6s ease-out;
    }

        .popular-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .popular-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .popular-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .popular-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .popular-card:nth-child(5) {
            animation-delay: 0.5s;
        }

        .popular-card:nth-child(6) {
            animation-delay: 0.6s;
        }
</style>

