<style>
    body {
        background-color: #f5f5f5;
    }

    .special-header {
        background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
        color: white;
        padding: 100px 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .special-header::before {
            content: '⭐';
            position: absolute;
            font-size: 25em;
            opacity: 0.05;
            top: -100px;
            left: -80px;
            animation: rotate 20s linear infinite;
        }

        .special-header::after {
            content: '✨';
            position: absolute;
            font-size: 20em;
            opacity: 0.05;
            bottom: -80px;
            right: -60px;
            animation: rotate 15s linear infinite reverse;
        }

    @@keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .special-header h1 {
        font-family: 'Damion', cursive;
        font-size: 4.5em;
        margin-bottom: 20px;
        text-shadow: 3px 3px 6px rgba(0,0,0,0.4);
        position: relative;
        z-index: 1;
    }

    .special-header p {
        font-size: 1.3em;
        color: #f5f5dc;
        max-width: 900px;
        margin: 0 auto 30px;
        line-height: 1.8;
        position: relative;
        z-index: 1;
    }

    .special-badge {
        display: inline-block;
        background: rgba(255,255,255,0.2);
        padding: 10px 30px;
        border-radius: 30px;
        font-size: 1.1em;
        font-weight: bold;
        margin-top: 20px;
        backdrop-filter: blur(10px);
    }

    .special-container {
        max-width: 1400px;
        margin: -50px auto 0;
        padding: 0 15px;
        position: relative;
        z-index: 10;
    }

    .popular-section {
        background: white;
        border-radius: 20px;
        padding: 50px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        margin-bottom: 50px;
    }

    .section-title {
        text-align: center;
        margin-bottom: 50px;
    }

        .section-title h2 {
            color: #D2691E;
            font-family: 'Damion', cursive;
            font-size: 3.5em;
            margin-bottom: 10px;
            display: inline-flex;
            align-items: center;
            gap: 15px;
        }

    .section-title-icon {
        font-size: 0.8em;
    }

    .section-title hr {
        width: 250px;
        height: 4px;
        background: linear-gradient(90deg, transparent, #D2691E, transparent);
        border: none;
        margin: 20px auto;
    }

    .popular-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
    }

    .popular-card {
        background: linear-gradient(135deg, #fff 0%, #faf0e6 100%);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: all 0.4s ease;
        border: 3px solid transparent;
    }

        .popular-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 40px rgba(210, 105, 30, 0.3);
            border-color: #D2691E;
        }

    .popular-card-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .popular-card:hover .popular-card-img {
        transform: scale(1.1);
    }

    .popular-card-img-container {
        overflow: hidden;
        position: relative;
    }

    .popular-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #D2691E;
        color: white;
        padding: 8px 20px;
        border-radius: 25px;
        font-weight: bold;
        font-size: 0.9em;
        box-shadow: 0 3px 10px rgba(0,0,0,0.3);
    }

    .popular-card-content {
        padding: 25px;
    }

    .popular-card-title {
        color: #8B4513;
        font-family: 'Damion', cursive;
        font-size: 2.2em;
        margin-bottom: 15px;
        text-align: center;
    }

        .popular-card-title .first-letter {
            font-size: 1.3em;
            color: #D2691E;
        }

    .popular-card-divider {
        width: 60%;
        height: 2px;
        background: #D2691E;
        margin: 10px auto 20px;
    }

    .popular-card-description {
        color: #666;
        font-size: 1em;
        line-height: 1.6;
        text-align: center;
        margin-bottom: 20px;
    }

    .popular-card-footer {
