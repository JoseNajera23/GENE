@model IEnumerable<MVCPanaderia.Models.DTOs.VentaDTO>
@{
    ViewBag.Title = "Index";
}

<style>
    body {
        margin: 0;
        font-family: var(--bs-body-font-family);
        font-size: var(--bs-body-font-size);
        font-weight: var(--bs-body-font-weight);
        line-height: var(--bs-body-line-height);
        color: var(--bs-body-color);
        text-align: var(--bs-body-text-align);
        background-color: #cd7137;
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }
</style>
<h2>Lista de Ventas</h2>

<p>
    @Html.ActionLink("Registrar Nueva Venta", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.VentaID)</th>
            <th>@Html.DisplayNameFor(model => model.ProductoID)</th>
            <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.VentaID)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductoID)</td>
                <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.VentaID }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.VentaID }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.VentaID }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

