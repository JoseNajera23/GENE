@model CamnionesWebMVCv1.Models.DTOs.Camione

@{
    ViewBag.Title = "Edit";
}

<style>
    .edit-title {
        color: #0d6efd;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-edit {
        background-color: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        max-width: 900px;
    }

        .card-edit h4 {
            color: #198754;
            margin-bottom: 15px;
        }

    .btn-save {
        background-color: #0d6efd;
        color: white;
        padding: 8px 20px;
        border-radius: 6px;
        border: none;
    }

        .btn-save:hover {
            background-color: #0b5ed7;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        padding: 8px 20px;
        border-radius: 6px;
        text-decoration: none;
        margin-left: 10px;
    }
</style>

<h2 class="edit-title">Edit</h2>

