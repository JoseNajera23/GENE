@model CamnionesWebMVCv1.Models.DTOs.Camione

@{
    ViewBag.Title = "Eliminar Camión";
}

<style>
    .delete-title {
        color: #dc3545;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-delete {
        background-color: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        max-width: 700px;
    }

    .warning-text {
        color: #842029;
        background-color: #f8d7da;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        color: #495057;
    }

    dd {
        margin-bottom: 10px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        padding: 8px 20px;
        border-radius: 6px;
        border: none;
    }

        .btn-delete:hover {
            background-color: #bb2d3b;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        padding: 8px 20px;
        border-radius: 6px;
        text-decoration: none;
        margin-left: 10px;
    }
</style>

<h2 class="delete-title">Eliminar Camión</h2>

<div class="card-delete">
    <div class="warning-text">
        ⚠️ ¿Estás seguro de que deseas eliminar este camión?
        <br />Esta acción no se puede deshacer.
    </div>

    <dl class="dl-horizontal">
        <dt>Matrícula</dt>
        <dd>@Html.DisplayFor(model => model.Matricula)</dd>

        <dt>Tipo de Camión</dt>
        <dd>@Html.DisplayFor(model => model.TipoCamion)</dd>

        <dt>Modelo</dt>
        <dd>@Html.DisplayFor(model => model.Modelo)</dd>

        <dt>Marca</dt>
        <dd>@Html.DisplayFor(model => model.Marca)</dd>

        <dt>Capacidad</dt>
        <dd>@Html.DisplayFor(model => model.Capacidad)</dd>

        <dt>Kilometraje</dt>
        <dd>@Html.DisplayFor(model => model.Kilometraje)</dd>

        <dt>Disponible</dt>
        <dd>@Html.DisplayFor(model => model.Disponibilidad)</dd>

        <dt>Fecha de Registro</dt>
        <dd>@Html.DisplayFor(model => model.FechaRegistro)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <input type="submit" value="Eliminar" class="btn-delete" />
            <a href="@Url.Action("Index")" class="btn-cancel">Cancelar</a>
        </div>
    }
</div>
